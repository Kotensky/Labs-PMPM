<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/first_number_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:enabled="false"
        android:gravity="end"
        android:maxLength="11"
        android:paddingEnd="32dp"
        android:paddingTop="32dp"
        android:singleLine="true"
        android:textColor="@color/button_text_gray"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/operation_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:enabled="false"
        android:gravity="end"
        android:maxLength="1"
        android:paddingEnd="32dp"
        android:paddingTop="16dp"
        android:singleLine="true"
        android:textColor="@color/button_text_gray"
        android:textSize="22sp" />

    <HorizontalScrollView
        android:id="@+id/main_field_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/main_field_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:enabled="false"
            android:gravity="end"
            android:maxLength="11"
            android:paddingBottom="32dp"
            android:paddingEnd="32dp"
            android:paddingTop="32dp"
            android:singleLine="true"
            android:text="0"
            android:textColor="@color/button_text"
            android:textSize="48sp" />

    </HorizontalScrollView>

    <TableRow style="@style/CalculatorTableRow">

        <Button
            android:id="@+id/clear_btn"
            style="@style/CalculatorButton.Operation"
            android:text="C" />

        <Button
            android:id="@+id/div_btn"
            style="@style/CalculatorButton.Operation"
            android:text="/" />

        <Button
            android:id="@+id/mul_btn"
            style="@style/CalculatorButton.Operation"
            android:text="*" />

        <Button
            android:id="@+id/delete_btn"
            style="@style/CalculatorButton.Operation"
            android:onClick="onClickDelete"
            android:text="←" />

    </TableRow>

    <TableRow style="@style/CalculatorTableRow">

        <Button
            android:id="@+id/btn_7"
            style="@style/CalculatorButton.Number"
            android:text="7" />

        <Button
            android:id="@+id/btn_8"
            style="@style/CalculatorButton.Number"
            android:text="8" />

        <Button
            android:id="@+id/btn_9"
            style="@style/CalculatorButton.Number"
            android:text="9" />

        <Button
            android:id="@+id/plus_btn"
            style="@style/CalculatorButton.Operation"
            android:text="+" />

    </TableRow>

    <TableRow style="@style/CalculatorTableRow">

        <Button
            android:id="@+id/btn_4"
            style="@style/CalculatorButton.Number"
            android:text="4" />

        <Button
            android:id="@+id/btn_5"
            style="@style/CalculatorButton.Number"
            android:text="5" />

        <Button
            android:id="@+id/btn_6"
            style="@style/CalculatorButton.Number"
            android:text="6" />

        <Button
            android:id="@+id/minus_btn"
            style="@style/CalculatorButton.Operation"
            android:text="-" />

    </TableRow>

    <TableRow style="@style/CalculatorTableRow">

        <Button
            android:id="@+id/btn_1"
            style="@style/CalculatorButton.Number"
            android:text="1" />

        <Button
            android:id="@+id/btn_2"
            style="@style/CalculatorButton.Number"
            android:text="2" />

        <Button
            android:id="@+id/btn_3"
            style="@style/CalculatorButton.Number"
            android:text="3" />


        <Button
            android:id="@+id/sqrt_btn"
            style="@style/CalculatorButton.Operation"
            android:onClick="onClickSqrt"
            android:text="√" />

    </TableRow>

    <TableRow style="@style/CalculatorTableRow">

        <Button
            android:id="@+id/point_btn"
            style="@style/CalculatorButton.Number"
            android:text="." />

        <Button
            android:id="@+id/btn_0"
            style="@style/CalculatorButton.Number"
            android:text="0" />

        <Button
            android:id="@+id/equal_btn"
            style="@style/CalculatorButton.Equal"
            android:layout_weight="2"
            android:onClick="onClickEqual"
            android:text="=" />


    </TableRow>

</TableLayout>